<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/post_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/video_back"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/post_exit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/exit"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:id="@+id/post_ll_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/post_back">
        <ImageView
            android:id="@+id/post_cover"
            android:layout_width="90dp"
            android:layout_height="127dp"
            android:layout_below="@+id/post_back"
            android:layout_marginLeft="20dp"
            android:src="@drawable/cat"/>

        <EditText
            android:id="@+id/post_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/post_back"
            android:layout_toRightOf="@+id/post_cover"
            android:hint="请输入文字描述..."
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="top"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:background="@drawable/edittext_border" />
    </LinearLayout>

    <TextView
        android:id="@+id/post_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_ll_describe"
        android:text="选择标签"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:id="@+id/post_ll_label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_below="@+id/post_tv_label">
        <Button
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:text="#生活#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:layout_marginLeft="10dp"
            android:text="#美食#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:layout_marginLeft="10dp"
            android:text="#宠物#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_ll_label2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_below="@+id/post_ll_label1">
        <Button
            android:id="@+id/label4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:text="#风景#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/label5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:layout_marginLeft="10dp"
            android:text="#影视#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/label6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:layout_marginLeft="10dp"
            android:text="#游戏#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_ll_label3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_below="@+id/post_ll_label2">
        <Button
            android:id="@+id/label7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:text="#明星#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/label8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:layout_marginLeft="10dp"
            android:text="#新闻#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/label9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:layout_marginLeft="10dp"
            android:text="#时尚#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_ll_label4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_below="@+id/post_ll_label3">
        <Button
            android:id="@+id/label10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:text="#运动#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/label11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:layout_marginLeft="10dp"
            android:text="#手工#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/label12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_label"
            android:layout_marginLeft="10dp"
            android:text="#家居#"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>


    <Button
        android:id="@+id/post_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="  确认发布  "
        android:textColor="#ffffff"
        android:textSize="20sp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/button_border"/>


</RelativeLayout>
